<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="System.Order.Order" table="order" >
		<id name="orderId" type="integer" >
			<column name="orderId" />
			<generator class="native"></generator>
		</id>
		
		<many-to-one name="user" class="System.User.User" column="userId" ></many-to-one>
		<many-to-one name="address" class="System.User.Address" column="addressId"></many-to-one>
		<many-to-one name="ware" class="System.Ware.Ware" column="wareId"></many-to-one>
		
		<property name="data" type="string" generated="insert" >
			<column name="data" sql-type="TIMESTAMP" default="CURRENT_TIMESTAMP"></column>
		</property>
		
		<property name="quantity" type="string" column="quantity" />
		<property name="totalPrice" type="string" column="totalPrice" />
		
	</class>
</hibernate-mapping>