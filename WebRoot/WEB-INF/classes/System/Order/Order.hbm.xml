<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="System.Order.Order" table="order" >
		<id name="orderId" type="integer" >
			<column name="orderId" />
			<generator class="native"></generator>
		</id>
		
		<property name="userId" type="integer" column="userId" />
		<property name="addressId" type="integer" column="addressId" />
		<property name="wareId" type="integer" column="wareId" />
		
		<property name="data" type="string" generated="insert" >
			<column name="data" sql-type="TIMESTAMP" default="CURRENT_TIMESTAMP"></column>
		</property>
		
		<property name="quantity" type="string" column="quantity" />
		<property name="totalPrice" type="string" column="totalPrice" />
		
	</class>
</hibernate-mapping>